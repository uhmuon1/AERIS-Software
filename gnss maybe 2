cmake_minimum_required(VERSION 3.12)

# First include the SDK (must be before project)
set(PICO_SDK_PATH "../../AERIS-Software/pico-sdk")
include(${PICO_SDK_PATH}/pico_sdk_init.cmake)

# Set the project name
project(gnss_test C CXX ASM)

# Set standards
set(CMAKE_C_STANDARD 11)
set(CMAKE_CXX_STANDARD 17)

# Initialize the SDK
pico_sdk_init()

# Create executable
add_executable(gnss_test
    gnss.c
)

# Add the required libraries
target_link_libraries(gnss_test 
    pico_stdlib 
    hardware_i2c
)

# Enable USB output, disable UART
pico_enable_stdio_usb(gnss_test 1)
pico_enable_stdio_uart(gnss_test 0)

# Create map/bin/hex/uf2 file etc.
pico_add_extra_outputs(gnss_test)
